{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "es2016",
        "lib": ["DOM", "es2016"],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "rootDir": "src",
        // Add these lines
        "types": [],
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.stories.tsx"]
}
